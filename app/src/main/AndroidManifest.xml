<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maxrtb.demo">

    <!-- ========== Demo应用基础权限 ========== -->
    <!-- 网络权限 - SDK必需 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 浮窗权限 - 用于测试浮窗广告 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- 通知权限 - Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:replace="android:maxSdkVersion"
        tools:ignore="ScopedStorage" />

    <!-- ========== 硬件特性声明（可选） ========== -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZxAdSDKDemo"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">

        <!-- ========== Demo应用Activity ========== -->
        <!-- 主Activity - Demo应用入口 -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|uiMode"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ZxAdSDKDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ========== Demo应用配置 ========== -->
        <!-- SDK初始化配置 -->
        <meta-data
            android:name="com.maxrtb.zxadsdk.APP_ID"
            android:value="demo_app_123456" />

        <!-- 调试模式 - 仅Demo使用 -->
        <meta-data
            android:name="com.maxrtb.zxadsdk.DEBUG_MODE"
            android:value="true" />

        <!-- 测试服务器地址 - 仅Demo使用 -->
        <meta-data
            android:name="com.maxrtb.zxadsdk.BASE_URL"
            android:value="https://api-test.maxrtb.com/" />

        <!-- Google Play Services版本 -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- 适配Android 12+ -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".MainActivity" />

    </application>

    <!-- ========== 查询其他应用权限 ========== -->
    <queries>
        <!-- 浏览器查询 -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="http" />
        </intent>

        <!-- 应用商店查询 -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="market" />
        </intent>
    </queries>

</manifest>